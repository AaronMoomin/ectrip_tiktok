.ticketContainer {
    position: relative;
}

.ticketContainer .imgShow {
    width: 100%;
}

.imgShow .scrollNav {
    width: 100%;
    height: 600rpx;
}

.imgShow .scrollNav .scrollItem image {
    width: 100%;
    height: 600rpx;
}

.contentContainer {
    position: absolute;
    top: 580rpx;
    width: 100%;
    height: 400rpx;
    background: #fff;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.contentContainer .title {
    font-size: 40rpx;
    letter-spacing: 5rpx;
    font-weight: bold;
    margin: 20rpx;
}

.contentContainer .infoContainer {
    margin: 20rpx 20rpx 0 20rpx;
    display: flex;
    flex-direction: column;
    font-size: 30rpx;
}

.infoContainer .infoItem {
    display: flex;
}

.infoContainer .infoItem .yyTime .time {
    font-weight: bold;
}

.infoContainer .infoItem .yyTime {
    flex: 1;
    margin-left: 15rpx;
}

.infoContainer .infoItem text:nth-child(2) {
    margin-left: 15rpx;
    flex: 1;
}

.infoContainer .infoItem .instruction {
    height: 50rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.infoContainer .infoItem .tz {
    width: 100rpx;
    height: 100rpx;
    margin-left: 10rpx;
}

.contentContainer .ticketContent {
    width: 90%;
    height: 450rpx;
    background: #f9f9f9;
    padding: 5%;
}

.ticketContent .innerTicket {
    width: 100%;
    height: 440rpx;
    padding: 5rpx;
    background: #fff;
    border-radius: 10rpx;
}

.innerTicket .info {
    background: #f9f9f9;
    margin: 20rpx;
    height: 280rpx;
    display: flex;
    padding: 20rpx;
}

.innerTicket .info .left {
    flex: 1;
    display: flex;
    flex-direction: column;
    width: 50%;
}

.innerTicket .info .left .name {
    width: 100%;
    height: 100rpx;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-weight: bold;
}

.innerTicket .info .left .desc {
    width: 100%;
    height: 100rpx;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 24rpx;
    color: #797979;
}

.innerTicket .info .left .know {
    font-size: 24rpx;
}

.innerTicket .info .left .know .tz {
    width: 100rpx;
    height: 100rpx;
    margin-left: 20rpx;
}

.info .right {
    display: flex;
    flex-direction: column;
    padding: 0 10rpx 10rpx 30rpx;
}

.red {
    color: #cf4643;
}

.price {
    font-size: 36rpx;
}

.info .right .priceBox {
    flex: 1;
}

.info .right .reserve {
    width: 170rpx;
    height: 60rpx;
    background: #3e86e8;
    color: #fff;
    border-radius: 30rpx;
    line-height: 30rpx;
}

.ContentInstruction {
    position: relative;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    height: 550rpx;
    overflow: hidden;
}
.ContentInstruction .cover{
    position:absolute;
    bottom: 0;
    width: 120%;
    height: 100%;
    box-shadow: -60rpx -89rpx 100rpx 40rpx #fff inset;
}

.ContentInstruction .title {
    margin-bottom: 30rpx;
}

.ContentInstruction .content .name {
    text-align: left;
    text-indent: 34rpx;
    font-size: 34rpx;
    margin-bottom: 20rpx;
}

.ContentInstruction .content .desc {
    text-align: left;
    text-indent: 28rpx;
    font-size: 28rpx;
}
.ContentInstruction .btnNav{
    display: flex;
    position: absolute;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 99;
}
.ContentInstruction .btnNav .add{
    color: #3e86e8;
}