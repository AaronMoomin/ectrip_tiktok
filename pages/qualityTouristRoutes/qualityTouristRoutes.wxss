.container {
    overflow: hidden;
}

.headImg {
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    border-radius: 10rpx;
    justify-content: space-around;
}

.headImg image {
    background: #eee;
    width: 90%;
    border-radius: 10rpx;
    height: 260rpx;
}

.btnContainer {
    display: flex;
    justify-content: space-around;
    padding: 30rpx;
    width: 100%;
}

.btnContainer .btnItem {
    width: 100rpx;
    text-align: center;
}

.btnContainer .btnItem image {
    width: 100rpx;
    height: 100rpx;
}

.btnContainer .btnItem text {
    font-size: 24rpx;
}

.contentContainer {
    width: 100%;
}

.contentContainer .title{
    font-size: 32rpx;
    font-weight: 500;
    letter-spacing: 5rpx;
    margin-left: 40rpx;
}

.contentContainer .scrollContainer {
    margin: 30rpx;
    height: 460rpx;
}

.scrollNav {
    height: 460rpx;
}

.scrollNav .scrollItem {
    position: relative;
    height: 460rpx;
}

.scrollNav .scrollItem image {
    width: 460rpx;
    height: 460rpx;
    border-radius: 10rpx;
}

.scrollNav .scrollItem .institution {
    position: absolute;
    width: 460rpx;
    height: 60rpx;
    bottom: 0;
    background: #fff;
    opacity: 0.8;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.scrollNav .scrollItem .institution text {
    font-weight: bold;
    letter-spacing: 5rpx;
    font-size: 25rpx;
}

.scrollNav .scrollItem .institution .price {
    color: #fabb5c;
    font-size: 30rpx;
    margin-left: 300rpx;
}

.contentContainer .showcaseContainer {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-top: 20rpx;
    padding: 5rpx;
}

.showcaseContainer .showcaseItem {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 46%;
    margin-bottom: 20rpx;
}

.showcaseContainer .showcaseItem image {
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
}

.showcaseContainer .showcaseItem .type {
    position: absolute;
    top: -10rpx;
    left: 50%;
    padding: 5rpx;
    font-size: 27rpx;
    transform: translateX(-50%);
    text-align: center;
    color: #fff;
    width: 160rpx;
    height: 50rpx;
    line-height: 45rpx;
    background: #25acff;
    border-radius: 10rpx;
    box-shadow: 0 0 0.05em rgba(0, 0, 0, 0.4);
}

.showcaseContainer .showcaseItem .show {
    display: flex;
    flex-direction: column;
    padding: 10rpx;
}

.show .info {
    font-size: 24rpx;
    color: #797979;
}

.line {
    margin-top: 20rpx;
    width: 100%;
    height: 10rpx;
    background: #eee;
    display: flex;
}

.line .left {
    background: #5bb0ff;
    width: 50%;
    height: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.line .right {
    background: #84cfff;
    width: 50%;
    height: 10rpx;
    border-bottom-right-radius: 10rpx;
}